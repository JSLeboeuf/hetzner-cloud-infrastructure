{
  "name": "autoscale-facebook-automation-backend",
  "version": "1.0.0",
  "description": "AutoScale AI - Facebook automation backend avec Temporal workflows",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "node dist/index.js & node dist/temporal/worker.js",
    "temporal:worker": "tsx src/temporal/worker.ts",
    "temporal:dev": "tsx watch src/temporal/worker.ts",
    "workflow:test": "tsx src/scripts/test-workflow.ts",
    "workflow:trigger": "tsx src/scripts/trigger-workflow.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "facebook",
    "automation",
    "ai",
    "claude",
    "temporal",
    "content-generation"
  ],
  "author": "AutoScale AI",
  "license": "PROPRIETARY",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@sentry/node": "^10.23.0",
    "@supabase/supabase-js": "^2.78.0",
    "@temporalio/activity": "^1.13.1",
    "@temporalio/client": "^1.13.1",
    "@temporalio/worker": "^1.13.1",
    "@temporalio/workflow": "^1.13.1",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "date-fns": "^3.0.0",
    "date-fns-tz": "^2.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.1.0",
    "openai": "^4.104.0",
    "opossum": "^8.1.3",
    "p-retry": "^6.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.24",
    "@types/opossum": "^8.1.9",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
