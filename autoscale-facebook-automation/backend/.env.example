# ===================================
# AutoScale Facebook Automation
# Configuration Environment Variables
# ===================================

# ----------------
# Supabase (Pro - Déjà payé)
# ----------------
SUPABASE_URL=https://[votre-projet].supabase.co
SUPABASE_SERVICE_KEY=eyJhbGc...
SUPABASE_ANON_KEY=eyJhbGc...

# ----------------
# AI Providers
# ----------------
# kie.ai (Plateforme API AI - Claude Sonnet 4.5)
KAI_API_KEY=b23878d0f4f0d9d975dc364145227220

# OpenAI (DALL-E 3 + embeddings)
OPENAI_API_KEY=sk-proj-...

# ----------------
# Facebook Graph API
# ----------------
FACEBOOK_PAGE_ID=your_page_id
FACEBOOK_ACCESS_TOKEN=your_permanent_page_access_token

# ----------------
# Temporal
# ----------------
# Local development
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default

# Production (Hetzner Docker Compose)
# TEMPORAL_ADDRESS=temporal:7233
# TEMPORAL_NAMESPACE=default

# Temporal Cloud (si upgrade)
# TEMPORAL_ADDRESS=your-namespace.tmprl.cloud:7233
# TEMPORAL_NAMESPACE=your-namespace
# TEMPORAL_API_KEY=your_api_key

# ----------------
# Notifications
# ----------------
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
NOTIFICATION_EMAIL=votre@email.com

# ----------------
# Monitoring
# ----------------
SENTRY_DSN=https://...@sentry.io/...
SENTRY_ENVIRONMENT=development

# ----------------
# Application
# ----------------
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# ----------------
# Scheduling (Cron)
# ----------------
# Format: jour de la semaine (0=dimanche, 1=lundi... 6=samedi)
# Exemple: mardi=2, mercredi=3, jeudi=4
SCHEDULE_DAYS=2,3,4
SCHEDULE_GENERATION_TIME=10:00
SCHEDULE_PUBLISH_WINDOW_START=13:00
SCHEDULE_PUBLISH_WINDOW_END=16:00
SCHEDULE_TIMEZONE=America/Toronto

# ----------------
# Feature Flags
# ----------------
ENABLE_ML_OPTIMIZATION=true
ENABLE_AUTO_PUBLISH=false
ENABLE_MULTI_VARIATION=true
ENABLE_ANALYTICS_COLLECTION=true
